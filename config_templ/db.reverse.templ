;
; BIND reverse data file for local loopback interface
;
$TTL	604800
@	IN	SOA	#{dnshostname}.#{domainname}. admin.#{domainname}. (
			      3		; Serial
			 604800		; Refresh
			  86400		; Retry
			2419200		; Expire
			 604800 )	; Negative Cache TTL
;
; name servers
      IN      NS      #{dnshostname}.#{domainname}.

; PTR Records
#{dnslastoctet}   IN      PTR     #{dnshostname}.#{domainname}.
1     IN      PTR     firewall.linux.example.
2     IN      PTR     printer.linux.example.
